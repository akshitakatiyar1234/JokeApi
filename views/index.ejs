<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa; /* Light background color */
    }
    .container {
      margin-top: 50px;
      margin-bottom: 50px;
    }
    .card {
      margin-bottom: 30px;
      border-radius: 10px; /* Rounded corners for cards */
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }
    .card-img-top {
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    }
    h1 {
      color: #343a40; /* Dark color for the heading */
    }
    .btn-warning {
      background-color: #ffc107; /* Custom warning button color */
      border: none; /* Remove border */
      border-radius: 5px; /* Rounded corners for buttons */
    }
    .btn-warning:hover {
      background-color: #e0a800; /* Darker shade on hover */
    }
  </style>
  <title>Search Jokes</title>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Search Jokes</h1>
    <form action="/" method="GET" class="mb-4">
      <div class="input-group">
        <input type="text" name="term" placeholder="Enter a keyword" class="form-control" required>
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>

    <div class="row">
      <% if (jokes.length > 0) { %>
        <% jokes.forEach(joke => { %>
          <div class="col-md-4">
            <div class="card">
              <img src="https://icanhazdadjoke.com/j/<%= joke.id %>.png" class="card-img-top" alt="Joke Image">
              <div class="card-body">
                <p class="card-text"><%= joke.joke %></p>
                <form action="/favorite" method="POST">
                  <input type="hidden" name="jokeId" value="<%= joke.id %>">
                  <input type="hidden" name="joke" value="<%= joke.joke %>">
                  <button type="submit" class="btn btn-warning">Favorite</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <div class="alert alert-info text-center" role="alert">
            No jokes found. Please try a different search term!
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
